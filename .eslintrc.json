{
  "env": {
    "browser": true,
    "react-native/react-native": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "react/function-component-definition": "off",
    "react/style-prop-object": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@assets",
            "./assets"
          ],
          [
            "@components",
            "./src/components"
          ],
          [
            "@hocs",
            "./src/hocs/index.js"
          ],
          [
            "@library",
            "./src/components/library/index.js"
          ],
          [
            "@services",
            "./src/services"
          ]
        ],
        "extensions": [
          ".ts",
          ".js",
          ".jsx",
          ".json"
        ]
      }
    }
  }
}