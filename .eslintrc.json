{
  "env": {
    "browser": true,
    "react-native/react-native": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "overrides": [
    {
      "files": [
        "src/features/**/*.js"
      ],
      "rules": {
        "no-use-before-define": "off",
        "no-param-reassign": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "react/function-component-definition": "off",
    "react/style-prop-object": "off",
    "react/jsx-props-no-spreading": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@assets",
            "./assets"
          ],
          [
            "@components",
            "./src/components"
          ],
          [
            "@features",
            "./src/features"
          ],
          [
            "@hocs",
            "./src/hocs/index.js"
          ],
          [
            "@hooks",
            "./src/hooks/index.js"
          ],
          [
            "@library",
            "./src/components/library/index.js"
          ],
          [
            "@services",
            "./src/services"
          ],
          [
            "@utils",
            "./src/utils"
          ]
        ],
        "extensions": [
          ".ts",
          ".js",
          ".jsx",
          ".json"
        ]
      }
    }
  }
}